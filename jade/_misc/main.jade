doctype html
html(lang='ru')
	head
		meta(charset='utf-8')
		title
			block title
		meta(name='description', content='')
		link(rel='shortcut icon', href='img/favicon/favicon.ico', type='image/x-icon')
		link(rel='apple-touch-icon', href='img/favicon/apple-touch-icon.png')
		link(rel='apple-touch-icon', sizes='72x72', href='img/favicon/apple-touch-icon-72x72.png')
		link(rel='apple-touch-icon', sizes='114x114', href='img/favicon/apple-touch-icon-114x114.png')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
		link(rel='stylesheet', href='css/main.css')

	body
		include _mixins
		include ../_sections/header

		main.main-content
			.container
				.row
					.col-9
						block main
					
					aside.right-sidebar.col-3
						block sidebar


		include ../_sections/footer
		include popups
		
		script(src='js/libs/jquery/jquery-1.11.2.min.js')
		script(src='js/libs/superfish/dist/js/hoverIntent.js')
		script(src='js/libs/superfish/dist/js/superfish.min.js')
		script(src='js/libs/magnific-popup/dist/jquery.magnific-popup.min.js')
		script(src='js/libs/slick-master/slick.min.js')
		script(src='js/libs/jsscrollpane/js/jquery.mousewheel.js')
		script(src='js/libs/jsscrollpane/js/jquery.jscrollpane.min.js')
		block page-scripts
		script(src='js/common.js')