doctype html
html(lang='ru')
	head
		meta(charset='utf-8')
		title
			block title
		meta(name='description', content='')
		link(rel='shortcut icon', href='img/favicon/favicon.ico', type='image/x-icon')
		link(rel='apple-touch-icon', href='img/favicon/apple-touch-icon.png')
		link(rel='apple-touch-icon', sizes='72x72', href='img/favicon/apple-touch-icon-72x72.png')
		link(rel='apple-touch-icon', sizes='114x114', href='img/favicon/apple-touch-icon-114x114.png')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
		link(rel='stylesheet', href='css/main.css')

	body
		include _mixins
		include ../_sections/header

		main.content
			.container
				.row
					.col-lg-8.col-xl-9.order-md-2
						ul.breadcrumbs
							li
								a(href="#") Главная

							block breadcrumb-current


					.col-12.cat-mob-wrap
						block cat-menu
				
			.container.main-content-contents
				.row
					.col-xl-9.col-lg-8.main-content
						block main
					
					aside.right-sidebar.col-xl-3.col-lg-4
						include ../_sections/sidebar-search
						block sidebar


		include ../_sections/footer
		//- include popups
		block page-popups
		
		include ../_includes/scripts
		block page-scripts
		script(src='js/common.js')